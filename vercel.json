{
  "version": 2,
  "builds": [
    { "src": "api/main.py", "use": "@vercel/python" },
    { "src": "frontend/index.html", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/main.py" },
    { "src": "/(.*\\.(?:png|jpg|jpeg|gif|svg|css|js|ico|txt))", "dest": "/$1" },
    { "src": "/(.*)", "dest": "frontend/index.html" }
  ]
}